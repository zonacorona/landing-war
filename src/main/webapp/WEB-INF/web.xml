    <filter>
        <filter-name>redirectFilter</filter-name>
        <filter-class>com.rackspace.cloud.api.FilterUrl</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>redirectFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>    
    <servlet-mapping>
    	<servlet-name>IndexServlet</servlet-name>
    	<url-pattern>/IndexServlet</url-pattern>
    </servlet-mapping>
